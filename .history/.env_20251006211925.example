# 环境变量配置示例
# 复制为 .env 文件并填入实际值

# cSpell:ignore NEXTAUTH FastGPT CREWAI CrewAI OCR marker-pdf MAX_FILE SIZE MB CHUNK OVERLAP ENABLE_FILE ENABLE_AUDIT ENVIRONMENT LOG_LEVEL

# 认证配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-for-development

# FastGPT RAG API 配置
FASTGPT_API_KEY=your_fastgpt_api_key
FASTGPT_API_BASE=https://your-fastgpt-domain.com/v1
FASTGPT_KB_ID=your_knowledge_base_id

# OpenAI API 配置
OPENAI_API_KEY=your_openai_key
OPENAI_API_BASE=https://api.openai.com/v1

# CrewAI 配置
CREW_AI_MODEL=gpt-4
CREW_AI_TEMPERATURE=0.1

# OCR 配置
DEFAULT_OCR_ENGINE=marker-pdf

# 文档处理配置
MAX_FILE_SIZE_MB=100
MAX_PAGES_PER_DOCUMENT=1000
CHUNK_SIZE=4000
CHUNK_OVERLAP=200

# 安全配置
ENABLE_FILE_VALIDATION=true
ENABLE_AUDIT_LOG=true

# 系统配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO