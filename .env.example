# OpenAI Compatible API Configuration
# Copy this file to .env and fill in your actual values

# API Authentication
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE=http://your-server:port/v1

# Model Configuration
LLM_MODEL=Qwen3-QwQ-32B
VLM_MODEL=Qwen2.5-VL-32B-Instruct
EMBEDDING_MODEL=bge-m3
RERANK_MODEL=bge-reranker-v2-minicpm-layerwise

# LLM Parameters
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_TOP_P=0.9

# Connection Settings
TIMEOUT=60
MAX_RETRIES=3

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Performance Settings
MAX_CONCURRENT=10

# Frontend Environment Variables (for Next.js)
# These should be prefixed with NEXT_PUBLIC_ to be accessible in the browser
NEXT_PUBLIC_OPENAI_API_BASE=http://your-server:port/v1
NEXT_PUBLIC_LLM_MODEL=Qwen3-QwQ-32B
NEXT_PUBLIC_VLM_MODEL=Qwen2.5-VL-32B-Instruct
NEXT_PUBLIC_EMBEDDING_MODEL=bge-m3
NEXT_PUBLIC_RERANK_MODEL=bge-reranker-v2-minicpm-layerwise
NEXT_PUBLIC_DEFAULT_TEMPERATURE=0.7
NEXT_PUBLIC_DEFAULT_MAX_TOKENS=2000
NEXT_PUBLIC_DEFAULT_TOP_P=0.9
NEXT_PUBLIC_TIMEOUT=60
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_MAX_CONCURRENT=10

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security
# IMPORTANT: Never commit .env file with real credentials to version control
# Add .env to .gitignore
